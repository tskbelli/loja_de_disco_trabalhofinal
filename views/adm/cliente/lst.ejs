<%- include('../cabecalho.ejs') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark"><i class="bi bi-people-fill text-primary-custom"></i> Clientes</h2>
    <a href="/adm/cliente/add" class="btn btn-success shadow-sm"><i class="bi bi-person-plus-fill"></i> Novo Cliente</a>
</div>

<div class="bg-light-container mb-4 p-3">
    <form action="/adm/cliente/lst" method="post" class="row g-2 align-items-center">
        <div class="col-auto flex-grow-1">
            <input type="text" name="filtro" class="form-control border-0 bg-light" placeholder="Buscar cliente..." style="box-shadow: inset 0 1px 3px rgba(0,0,0,0.06);">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary px-4"><i class="bi bi-search"></i></button>
        </div>
    </form>
</div>

<div class="table-responsive bg-white rounded shadow-sm border">
    <table class="table table-custom table-hover mb-0 align-middle">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Localização</th>
                <th>CPF</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            <% for (const cliente of Cliente) { %>
            <tr>
                <td class="fw-bold text-dark"><%= cliente.nome %></td>
                <td class="text-muted"><%= cliente.email %></td>
                <td><span class="badge badge-green rounded-pill"><%= cliente.cidade %> / <%= cliente.estado %></span></td>
                <td class="text-secondary"><small><%= cliente.cpf %></small></td>
                <td class="text-end">
                    <a href="/adm/cliente/edt/<%= cliente.id %>" class="btn btn-sm btn-light text-warning border"><i class="bi bi-pencil-fill"></i></a>
                    <a href="/adm/cliente/del/<%= cliente.id %>" class="btn btn-sm btn-light text-danger border" onclick="return confirm('Excluir?')"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <% if(Cliente.length === 0) { %>
        <div class="text-center p-4 text-muted">Nenhum cliente encontrado.</div>
    <% } %>
</div>

<%- include('../rodape.ejs') %>