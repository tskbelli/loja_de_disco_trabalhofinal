<%- include('../cabecalho.ejs') %>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="bg-light-container">
            <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
                <h3 class="text-dark"><i class="bi bi-disc text-primary-custom"></i> Novo Disco</h3>
                <a href="/disco/lst" class="btn btn-light btn-sm border">Voltar</a>
            </div>
            
            <form method="post" enctype="multipart/form-data">
                
                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input type="text" name="titulo" class="form-control" required placeholder="Ex: Thriller">
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Artista</label>
                        <input type="text" name="artista" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ano</label>
                        <input type="number" name="ano" class="form-control" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Gênero</label>
                        <select name="genero" class="form-select">
                            <option value="rock">Rock</option>
                            <option value="pop">Pop</option>
                            <option value="rap">Rap</option>
                            <option value="funk">Funk</option>
                            <option value="clássica">Clássica</option>
                            <option value="jazz">Jazz</option>
                            <option value="metal">Metal</option>
                            <option value="pagode">Pagode</option>
                            <option value="samba">Samba</option>
                            <option value="forró">Forró</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Preço (R$)</label>
                        <input type="number" step="0.01" name="preco" class="form-control" required placeholder="0.00">
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Capa do Álbum</label>
                    <input type="file" name="img" class="form-control">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg shadow-sm">
                        <i class="bi bi-check-circle-fill"></i> Cadastrar
                    </button>
                </div>
                
            </form>
        </div>
    </div>
</div>

<%- include('../rodape.ejs') %>