<%- include('../cabecalho.ejs') %>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="bg-light-container">
            <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
                <h3 class="text-dark"><i class="bi bi-pencil text-primary-custom"></i> Editar Disco</h3>
                <a href="/disco/lst" class="btn btn-light btn-sm border">Voltar</a>
            </div>
            
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="<%= Disco.id %>">
                
                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input type="text" name="titulo" value="<%= Disco.titulo %>" class="form-control" required>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Artista</label>
                        <input type="text" name="artista" value="<%= Disco.artista %>" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ano</label>
                        <input type="number" name="ano" value="<%= Disco.ano %>" class="form-control" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Gênero</label>
                        <select name="genero" class="form-select">
                            <option value="rock" <%= Disco.genero === 'rock' ? 'selected' : '' %>>Rock</option>
                            <option value="pop" <%= Disco.genero === 'pop' ? 'selected' : '' %>>Pop</option>
                            <option value="rap" <%= Disco.genero === 'rap' ? 'selected' : '' %>>Rap</option>
                            <option value="funk" <%= Disco.genero === 'funk' ? 'selected' : '' %>>Funk</option>
                            <option value="clássica" <%= Disco.genero === 'clássica' ? 'selected' : '' %>>Clássica</option>
                            <option value="jazz" <%= Disco.genero === 'jazz' ? 'selected' : '' %>>Jazz</option>
                            <option value="metal" <%= Disco.genero === 'metal' ? 'selected' : '' %>>Metal</option>
                            <option value="pagode" <%= Disco.genero === 'pagode' ? 'selected' : '' %>>Pagode</option>
                            <option value="samba" <%= Disco.genero === 'samba' ? 'selected' : '' %>>Samba</option>
                            <option value="forró" <%= Disco.genero === 'forró' ? 'selected' : '' %>>Forró</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Preço (R$)</label>
                        <input type="number" step="0.01" name="preco" value="<%= Disco.preco %>" class="form-control" required>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Alterar Capa (Opcional)</label>
                    <input type="file" name="img" class="form-control">
                    <% if(Disco.img) { %>
                        <div class="mt-2">
                            <small class="text-muted">Capa Atual:</small><br>
                            <img src="<%= Disco.img %>" style="height: 60px; border-radius: 4px; border: 1px solid #ddd;">
                        </div>
                    <% } %>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                        <i class="bi bi-check-circle-fill"></i> Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../rodape.ejs') %>