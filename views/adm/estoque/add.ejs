<%- include('../cabecalho.ejs') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="bg-light-container">
            <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
                <h3 class="text-dark"><i class="bi bi-box-seam text-primary-custom"></i> Adicionar ao Estoque</h3>
                <a href="/estoque/lst" class="btn btn-light btn-sm border">Voltar</a>
            </div>
            
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Nome do Disco/Produto</label>
                    <input type="text" name="disco" class="form-control" placeholder="Ex: Pink Floyd - The Wall" required>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Quantidade</label>
                        <input type="number" name="quantidade" class="form-control" min="0" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Localização (Prateleira)</label>
                        <input type="text" name="localizacao" class="form-control" placeholder="Ex: A-12" required>
                    </div>
                </div>

                <div class="d-grid mt-3">
                    <button type="submit" class="btn btn-success shadow-sm"><i class="bi bi-plus-circle"></i> Cadastrar Item</button>
                </div>
            </form>
        </div>
    </div>
</div>

