<%- include('../cabecalho.ejs') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark"><i class="bi bi-box-seam text-primary-custom"></i> Estoque</h2>
    <a href="/adm/estoque/add" class="btn btn-success shadow-sm"><i class="bi bi-plus-lg"></i> Novo Item</a>
</div>

<div class="table-responsive bg-white rounded shadow-sm border">
    <table class="table table-custom table-hover mb-0 align-middle">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Localização</th>
                <th class="text-center">Qtd.</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            <% for (const item of Estoques) { %>
            <tr>
                <td class="fw-bold text-dark"><%= item.disco %></td>
                <td><span class="badge bg-light text-dark border"><i class="bi bi-geo-alt"></i> <%= item.localizacao %></span></td>
                <td class="text-center">
                    <span class="badge <%= item.quantidade > 5 ? 'badge-green' : 'bg-danger text-white' %> rounded-pill px-3">
                        <%= item.quantidade %>
                    </span>
                </td>
                <td class="text-end">
                    <a href="/adm/estoque/edt/<%= item.id %>" class="btn btn-sm btn-light text-warning border"><i class="bi bi-pencil-fill"></i></a>
                    <a href="/adm/estoque/del/<%= item.id %>" class="btn btn-sm btn-light text-danger border" onclick="return confirm('Remover?')"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <% if(Estoques.length === 0) { %>
        <div class="text-center p-4 text-muted">Estoque vazio.</div>
    <% } %>
</div>

<%- include('../rodape.ejs') %>