<%- include('cabecalholoja.ejs') %>

<div class="row justify-content-center">
    <div class="col-lg-10">
        <h2 class="mb-4 fw-bold"><i class="bi bi-cart3 text-primary-custom"></i> Seu Carrinho</h2>

        <% if(discos.length === 0) { %>
            <div class="text-center py-5 bg-light-container">
                <i class="bi bi-cart-x display-1 text-muted opacity-25"></i>
                <h3 class="mt-3 text-muted">Seu carrinho está vazio</h3>
                <a href="/loja/catalogo" class="btn btn-primary mt-3 rounded-pill px-4">Voltar ao Catálogo</a>
            </div>
        <% } else { %>
            <div class="row g-4">
                <!-- Lista de Itens -->
                <div class="col-lg-8">
                    <div class="bg-light-container p-0 overflow-hidden">
                        <ul class="list-group list-group-flush">
                            <% for(const disco of discos) { %>
                                <li class="list-group-item p-3 d-flex align-items-center bg-white">
                                    <% if(disco.img) { %>
                                        <img src="<%= disco.img %>" class="rounded me-3 border" style="width: 80px; height: 80px; object-fit: cover;">
                                    <% } else { %>
                                        <div class="rounded me-3 bg-light d-flex align-items-center justify-content-center border" style="width: 80px; height: 80px;">
                                            <i class="bi bi-disc text-secondary"></i>
                                        </div>
                                    <% } %>
                                    
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1 fw-bold"><%= disco.titulo %></h5>
                                        <p class="mb-0 text-muted small"><%= disco.artista %></p>
                                    </div>
                                    
                                    <div class="text-end ms-3">
                                        <div class="fw-bold fs-5 mb-1">R$ <%= disco.preco.toFixed(2) %></div>
                                        <a href="/loja/remover/<%= disco._id %>" class="text-danger small text-decoration-none">
                                            <i class="bi bi-trash"></i> Remover
                                        </a>
                                    </div>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </div>

                <!-- Resumo do Pedido -->
                <div class="col-lg-4">
                    <div class="bg-light-container sticky-top" style="top: 100px;">
                        <h4 class="mb-3">Resumo</h4>
                        <div class="d-flex justify-content-between mb-2 text-muted">
                            <span>Subtotal (<%= discos.length %> itens)</span>
                            <span>R$ <%= total.toFixed(2) %></span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fs-4 fw-bold">Total</span>
                            <span class="fs-4 fw-bold text-success">R$ <%= total.toFixed(2) %></span>
                        </div>

                        <form action="/loja/comprar" method="post">
                            <button type="submit" class="btn btn-success w-100 btn-lg mb-3">
                                Finalizar Compra
                            </button>
                        </form>
                        <a href="/loja/catalogo" class="btn btn-outline-secondary w-100">Continuar Comprando</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<%- include('rodapeloja.ejs') %>